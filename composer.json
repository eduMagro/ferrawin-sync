{
    "name": "hpr/ferrawin-sync",
    "description": "Túnel de sincronización FerraWin → Manager Producción",
    "type": "project",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.0",
        "pusher/pusher-php-server": "^7.2",
        "ratchet/pawl": "^0.4"
    },
    "autoload": {
        "psr-4": {
            "FerrawinSync\\": "src/"
        }
    },
    "scripts": {
        "sync": "php sync.php",
        "sync:dry": "php sync.php --dry-run",
        "test-connection": "php test-connection.php",
        "listener": "php sync-listener.php",
        "listener:test": "php sync-listener.php --test"
    }
}
